				<version>${project.version}</version>
				<type>war</type>
			</dependency>
			<dependency>
				<groupId>net.a.g.jee.mom</groupId>
				<artifactId>mom-application-api</artifactId>
				<version>${project.version}</version>
				<type>jar</type>
			</dependency>

			<dependency>
				<groupId>net.a.g.jee.mom</groupId>
				<artifactId>mom-application-ear</artifactId>
				<version>${project.version}</version>
				<type>ear</type>
			</dependency>

			<!-- Provided dependencies -->
			<dependency>
